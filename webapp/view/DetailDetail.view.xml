<View xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" displayBlock="true" height="100%">
	<Page id="detailDetailPage" title="DetailDetail page" backgroundDesign="Transparent">
		<content>
			<Label text="{/Roepnaam} {/Name}" design="Bold" width="100%" />
			<HBox class="sapUiSmallMargin">
				<HBox class="sapUiSmallMargin">
					<Image src="{/photoURL}" width="10em"></Image>
				</HBox>
				<VBox class="sapUiSmallMargin">	
					<HBox class="sapUiSmallMargin">
						<core:Icon src="sap-icon://phone"/>
						<Label width="1em"/>
						<Link text="{/Telefoon}" press="onPhoneClick"/>						
					</HBox>
					<HBox class="sapUiSmallMargin">
						<core:Icon src="sap-icon://iphone"/>
						<Label width="1em"/>						
						<Link text="{/Mobiel}" press="onMobPhoneClickInf"/>
					</HBox>	
					<HBox class="sapUiSmallMargin" >
						<core:Icon src="sap-icon://email"/>
						<Label width="1em"/>						
						<Link text="{/Email}" press="onEmailClick"/>
					</HBox>	
					<HBox class="sapUiSmallMargin">
						<Label text="{/kamernummer}" width="100%" />
						<Label width="1em"/>					
						<Label text="{/RoomNo}" width="100%" />			
					</HBox>	
				</VBox>						
			</HBox>  
		</content>
	</Page>
</View>